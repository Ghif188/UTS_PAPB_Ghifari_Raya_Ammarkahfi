<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="35dp"
        android:paddingVertical="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembelian Tiket"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp">
        <TextView
            android:id="@+id/bioskop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Bioskop :"
            android:paddingBottom= "10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Spinner
            android:id="@+id/spinnerBioskop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/bioskop"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerBioskop"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Pilih Jenis Seat :"/>
        <Spinner
            android:id="@+id/spinnerSeat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/seat"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerSeat"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Pilih Tanggal :"/>
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintTop_toBottomOf="@id/tanggal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <RelativeLayout
            android:id="@+id/harga_awal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datePicker">
            <TextView
                android:id="@+id/seat_teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Seat :"/>
            <TextView
                android:id="@+id/harga_awal_teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/pembatas"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/harga_awal"
            android:orientation="horizontal" />
        <RelativeLayout
            android:id="@+id/total_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pembatas">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pembayaran :"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/total_harga_teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:paddingVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_harga"/>
        <Spinner
            android:id="@+id/spinnerMethod"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/method"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/bawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerMethod">
            <Spinner
                android:id="@+id/spinnerBank"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/method"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Beli Tiket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bawah"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>